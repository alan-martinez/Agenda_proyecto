<div class="container p-4">
    <div class="row">
        {{#each actis}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{descripcion}}
                        </h3>
                    </a>
                    <p class="m-2">{{fechainicio}}</p>
                    <p class="m-2">{{fechafin}}</p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p> 
                    <a class="btn btn-danger" href="/links/delete/{{id}}">
                        Eliminar actividad
                    </a>
                    <a class="btn btn-secondary" href="/links/edit/{{id}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay ninguna actividad a√∫n.</p>
                <a>Espera a una!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>